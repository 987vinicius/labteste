<%= simple_form_for @group_lab do |f| %>
  <div class="box box-danger">
    <div class="box-header with-border">
      <h3 class="box-title">Exames</h3>
    </div>
    <div class="box-body">
      <ul id="group_items" class="todo-list">
        <%= f.simple_fields_for :laboratorio_items do |b| %>
          <%= render 'laboratorio_item_fields', f: b %>
        <% end %>
      </ul>
      <div class="box-footer clearfix no-border add_lote">
        <%= link_to_add_association f, :laboratorio_items, class: "btn btn-primary pull-right", id: "add_exame",
          data: {'association-insertion-node': '#lots_boxes_items', 'association-insertion-method': 'append'} do %>
          <i class='fa fa-plus'></i> Adicionar Grupo
        <% end %>
      </div>
    </div>
  </div>

  <div class="box box-danger">
    <div class="box-footer">
      <%= link_to 'Cancelar', eval_with_rescue("#{controller_name}_path"), class: "btn btn-default" %>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
