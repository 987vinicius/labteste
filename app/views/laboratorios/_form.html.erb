
<%= simple_form_for(@laboratorio) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :cnpj %>
    <%= f.input :rua %>
    <%= f.input :bairro %>
    <%= f.input :logradouro %>
    <%= f.input :numero %>
    <%= f.input :complemento %>
    <%= f.input :cep %>
    <%= f.input :cidade %>
    <%= f.input :estado %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
