<%= simple_form_for @laboratorio do |f| %>
    <div class="box box-danger">
      <div class="box-header with-border inside">

      <div class="row">
        <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
          <%= f.input :status %>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
          <%= f.input :nome %>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
          <%= f.input :cnpj %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
          <%= f.input :rua %>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
          <%= f.input :bairro %>
        </div>

        <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
          <%= f.input :logradouro %>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
          <%= f.input :numero %>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
          <%= f.input :cep %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <%= f.input :complemento %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
          <%= f.input :cidade %>
        </div>

        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
          <%= f.input :estado %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
          <%= f.input :status, as: :select,
                  collection: Laboratorio.statuses.collect{|k, v|
                    [t("activerecord.attributes.laboratorio.statuses.#{k}"), k]
                  }, label: 'Status' %>
        </div>
      </div>
      
        <div class="box-footer">
          <%= link_to 'Cancelar', eval_with_rescue("#{controller_name}_path"), class: "btn btn-default" %>
          <%= f.submit class: "btn btn-primary" %>
        </div>
    </div>
  </div>
<% end %>
