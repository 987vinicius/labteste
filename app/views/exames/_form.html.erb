<%= simple_form_for @exame do |f| %>
  <div class="box">
    <div class="box-body"><p>
      <div class="row">
        <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
          <%= f.input :nome %>
        </div>
        <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
          <%= f.input :tipo, as: :select,
                  collection: Exame.tipos.collect{|k, v|
                    [t("activerecord.attributes.exame.tipos.#{k}"), k]
                  }, label: 'Tipo' %>
        </div>
        <div class="col-lg-2 col-md-4 col-sm-12 col-xs-12">
            <%= f.input :status, as: :select,
                    collection: Exame.statuses.collect{|k, v|
                      [t("activerecord.attributes.exame.statuses.#{k}"), k]
                    }, label: 'Status' %>
        </div>
        </div>
      </div>
    </div>
    <div class="box-footer">
      <%= link_to 'Voltar', eval_with_rescue("#{controller_name}_path"), class: "btn btn-default" %>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
